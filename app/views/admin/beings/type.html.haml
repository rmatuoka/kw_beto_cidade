= form_for [:admin, @being] do |f|     
  -if @type.to_s == "1"    

    #empresa    
      %h2 Dados do Empresa
      %p
        = f.label :company_id, "Nome da Empresa"
        = f.select :company_id, @companies
        = link_to "[nova empresa]", new_company_path
      %p
        = f.label :emp_cargo, "Cargo"
        = f.text_field :emp_cargo
      %p
        = f.label :grau_relacionamento, "Grau de Relacionamento" 
        -@grau_relacionamento.each do |relacionamento|
          =f.radio_button :grau_relacionamento, relacionamento.id
          =relacionamento.name
        
      %p
        = f.label :emp_potencia_votos, "Potência de Votos"
        = f.text_field :emp_potencia_votos

      %p
        = f.label :emp_tipo_empresa, "Tipo de Empresa"
        = f.select :emp_tipo_empresa, @typeCompanies, :prompt => "Selecione"      
        

        
  -if @type.to_s == "2"  
    #prefeito
      %h2 Dados do Prefeito
      %p
        = f.label :party_id, "Partido"
        = f.select :party_id, @parties

      %p
        = f.label :city_id, "Cidade"
        = f.select :city_id, @cities

      %p
        = f.label :pre_numero_votos, "Números de Votos"
        = f.text_field :pre_numero_votos

      %p
        = f.label :grau_relacionamento, "Grau de Relacionamento" 
        -@grau_relacionamento.each do |relacionamento|
          =f.radio_button :grau_relacionamento, relacionamento.id
          =relacionamento.name      
  
      
  -if @type.to_s == "3"
    #vereador  
      %h2 Dados do Vereador
      %p
        = f.label :party_id, "Partido"
        = f.select :party_id, @parties

      %p
        = f.label :city_id, "Cidade"
        = f.select :city_id, @cities

      %p
        = f.label :ver_numero_votos, "Números de Votos"
        = f.text_field :ver_numero_votos

      %p
        = f.label :grau_relacionamento, "Grau de Relacionamento" 
        -@grau_relacionamento.each do |relacionamento|
          =f.radio_button :grau_relacionamento, relacionamento.id
          =relacionamento.name 

  - if @type.to_s == "4"
    #secretario
      %h2 Dados do(a) Secretário(a)
      %p
        = f.label :grau_relacionamento, "Grau de Relacionamento" 
        -@grau_relacionamento.each do |relacionamento|
          =f.radio_button :grau_relacionamento, relacionamento.id
          =relacionamento.name
      %p
        = f.label :sec_potencia_votos, "Números de Votos"
        = f.text_field :sec_potencia_votos
      %p
        = f.label :sec_primeira_divisao
        = f.select :sec_primeira_divisao, @sec_positions
      %p
        = f.label :sec_segunda_divisao
        = f.select :sec_segunda_divisao, @sec_secretary
      

  - if @type.to_s == "5"   
    #dirigente  
      %h2 Dados do Dirigente
      %p
        = f.label :grau_relacionamento, "Grau de Relacionamento" 
        -@grau_relacionamento.each do |relacionamento|
          =f.radio_button :grau_relacionamento, relacionamento.id
          =relacionamento.name
      %p
        = f.label :dir_potencia_votos, "Números de Votos"
        = f.text_field :dir_potencia_votos
      
      %p
        = f.label :dir_primeira_divisao
        = f.select :dir_primeira_divisao, @ruling_positions   
      
      %p
        = f.label :dir_segunda_divisao, "Qual?"
        = f.text_field :dir_potencia_votos      
            
                
                
                
                
                
                
                