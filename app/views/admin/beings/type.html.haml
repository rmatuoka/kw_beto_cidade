= form_for [:admin, @being] do |f|     
  -if @type.to_s == "1"    

    #empresa    
      %h2 Dados do Empresa
      %p
        = f.label :company_id, "Nome da Empresa"
        = f.select :company_id, @companies
        = link_to "[nova empresa]", new_admin_company_path
      %p
        = f.label :emp_cargo, "Cargo"
        = f.text_field :emp_cargo
      %p
        = f.label :grau_relacionamento, "Grau de Relacionamento" 
        -@grau_relacionamento.each do |relacionamento|
          =f.radio_button :grau_relacionamento, relacionamento.id
          =relacionamento.name
        
      %p
        = f.label :emp_potencia_votos, "Potência de Votos"
        = f.text_field :emp_potencia_votos

      %p
        = f.label :emp_tipo_empresa, "Tipo de Empresa"
        = f.select :emp_tipo_empresa, @typeCompanies, :prompt => "Selecione"      
        
  -if @type.to_s == "2"  
    #prefeito
